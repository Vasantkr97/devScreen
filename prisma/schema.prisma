generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  candidate
  interviewer
}


model User {
  id                  String        @id @default(cuid()) //Primary Key
  clerkId             String        @unique
  email               String        @unique
  name                String  
  image               String?
  role                Role          //candidate or interviewer
  createdAt           DateTime      @default(now())
  @@index([clerkId])   //Index on ClerkId for faster queries
  Comment             Comment[]
}

model interviews {
  id                  String        @id @default(cuid())
  title               String
  candidateId         String
  interviewerIds      String[]
  streamCallId        String
  status              String
  startTime           DateTime
  endTime             DateTime?
  description         String?

  //Relations
  comment             Comment[] 

  @@index([candidateId])  //Faster lookups for candidate interviews
  @@index([streamCallId]) //Ensure Stream call IDs are unique
}


model Comment {
  id                  String        @id @default(cuid())
  content             String
  rating              Int
  interviewerId       String
  interviewer         User          @relation(fields: [interviewerId], references: [id])
  interviewId         String
  interview           interviews    @relation(fields: [interviewId], references: [id])

  @@index([interviewerId])
}